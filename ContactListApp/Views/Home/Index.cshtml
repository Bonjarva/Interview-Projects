@model IEnumerable<dynamic>


<div class="text-center, contact-list">
    <h1 class="display-4">Welcome to your contacts</h1>
    <h2>Contact List</h2>

    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th></th> <!-- Details button column -->
            </tr>
        </thead>
        <tbody>
            @foreach (var contact in Model.OrderBy(c => c.LastName).ThenBy(c => c.FirstName))
            {
                <tr>
                    <td>@contact.FirstName</td>
                    <td>@contact.LastName</td>
                    <td>
                        <a href="@Url.Action("Details", "Home", new { id = contact.Id })">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
